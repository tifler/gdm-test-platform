# Purpose: Makefile for "pngdec"
# Author.: Seungwon Shin (swshin)
#
###############################################################

CFLAGS = -Wall -g -O2 -I$(ROOTFS_PATH)/usr/include -I../../include
LDFLAGS = -pthread -L$(ROOTFS_PATH)/usr/lib
OBJS = pngtest.o

.PHONY: all

.c.o:
	$(CC) -c $(CFLAGS) -o $@ $<

all: pngdec

pngdec: $(OBJS)
	$(LD) $(LDFLAGS) -o $@ pngtest.o -ldl -lz -lion -lutils -lpng
clean:
	rm -f *.o pngdec

